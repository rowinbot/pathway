---
import Game from "../../features/game/game.svelte";
import Layout from "../../layouts/base-layout.astro";
import invariant from "tiny-invariant";

const { gameId } = Astro.params;

invariant(gameId, "Game ID is required");
---

<Layout title={gameId + " | Pathway"}>
  <main class="py-8 flex flex-col">
    <div class="max-w-7xl w-full px-8 mx-auto">
      <Game client:load gameId={gameId} />
    </div>
  </main>
</Layout>
